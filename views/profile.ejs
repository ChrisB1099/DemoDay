<form id="runner-profile-form">
  <!-- Name -->
  <label for="first-name">First Name:</label>
  <input type="text" id="first-name" name="firstName" required />
  
  <label for="last-name">Last Name:</label>
  <input type="text" id="last-name" name="lastName" required />

  <!-- Email -->
  <label for="email">Email:</label>
  <input type="email" id="email" name="email" required />

  <!-- Best Track Times -->
  <fieldset>
    <legend>Best Track Times</legend>
    <label for="time-100m">100m:</label>
    <input type="text" id="time-100m" name="time100m" placeholder="e.g., 10.5s" />
    
    <label for="time-200m">200m:</label>
    <input type="text" id="time-200m" name="time200m" placeholder="e.g., 21.5s" />
    
    <label for="time-400m">400m:</label>
    <input type="text" id="time-400m" name="time400m" placeholder="e.g., 50.5s" />
    
    <label for="time-800m">800m:</label>
    <input type="text" id="time-800m" name="time800m" placeholder="e.g., 2:10" />
    
    <label for="time-1500m">1500m:</label>
    <input type="text" id="time-1500m" name="time1500m" placeholder="e.g., 4:30" />
    
    <label for="time-3000m">3000m:</label>
    <input type="text" id="time-3000m" name="time3000m" placeholder="e.g., 9:30" />
  </fieldset>

  <!-- Availability -->
  <fieldset>
    <legend>Availability</legend>
    <label for="availability">Select Available Days and Times:</label>
    <textarea id="availability" name="availability" rows="4" placeholder="e.g., Mon-Fri, 6-8pm"></textarea>
  </fieldset>

  <!-- Submit Button -->
  <button type="submit">Submit</button>
</form>

<script src="main.js"></script>

